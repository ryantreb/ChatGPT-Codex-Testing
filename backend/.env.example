# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/secops_ai?schema=public"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# LLM Providers
LLM_PROVIDER=anthropic
# Anthropic
ANTHROPIC_API_KEY=your-anthropic-api-key
# OpenAI
OPENAI_API_KEY=your-openai-api-key

# Embeddings
EMBEDDING_PROVIDER=openai
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536

# File Storage
STORAGE_TYPE=local
STORAGE_PATH=/tmp/secops-ai-uploads
# S3 (optional)
AWS_S3_BUCKET=
AWS_REGION=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Email (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@secops-ai.example.com

# Application
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001

# SSO (optional)
SAML_ENTRY_POINT=
SAML_ISSUER=
SAML_CALLBACK_URL=
OIDC_CLIENT_ID=
OIDC_CLIENT_SECRET=
OIDC_ISSUER=

# Security
BCRYPT_ROUNDS=10
API_RATE_LIMIT_WINDOW=15m
API_RATE_LIMIT_MAX=100

# Worker
WORKER_CONCURRENCY=5
